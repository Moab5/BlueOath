<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlueOath</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <header class="m-auto bg-info-subtle border-bottom">
        <ul class="nav nav-underline py-3 ps-5">
            <li class="nav-item display-6 px-3">
                <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">BlueOath</a>
            </li>
            <li class="nav-item px-3 h2">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Menu">Home</a>
            </li>
            <li class="nav-item px-3 h2">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Rooms</a>
            </li>
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center bg-info-subtle p-3 fixed-bottom">
        <div class="container">
            &copy; 2023 - BlueOath, Inc 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
