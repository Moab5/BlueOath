@model BlueOath.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-5 my-4">Details</h1>

<div class="container">
    <hr />
    <div class="row justify-content-between">
        <div class="col-4">
            <img decoding="async" src="@("~/image/"+Model.Description)" asp-append-version="true" height="60%"/>
        </div>
        <dl class="col-6">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoomType)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RoomType)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Facilities)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Facilities)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Rate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary mt-2 mx-3" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="Delete" class="btn btn-danger mt-2 mx-3" asp-route-id="@Model?.Id" role="button">Delete</a>
    <a asp-action="Index" class="btn btn-secondary mt-2 mx-3" role="button">Back to List</a>
</div>
